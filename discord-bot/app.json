{
  "name": "bodax-masters-discord-bot",
  "description": "Discord bot for Bodax Masters tournament management and ticket system",
  "repository": "https://github.com/yourusername/bodax-masters",
  "keywords": ["discord", "bot", "tournament", "tickets", "valorant"],
  "env": {
    "DISCORD_BOT_TOKEN": {
      "description": "Your Discord bot token",
      "required": true
    },
    "DISCORD_GUILD_ID": {
      "description": "Your Discord server ID",
      "required": true
    },
    "DISCORD_ADMIN_CHANNEL_ID": {
      "description": "Admin notifications channel ID",
      "required": true
    },
    "DISCORD_TICKET_CATEGORY_ID": {
      "description": "Category for ticket channels",
      "required": true
    },
    "DISCORD_SUPPORT_ROLE_ID": {
      "description": "Role for support team",
      "required": true
    },
    "DISCORD_TICKET_CHANNEL_ID": {
      "description": "Channel for ticket creation",
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
} 